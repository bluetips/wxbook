.page .content .contact {
    background-color: #fff;
    width: 100%;
    padding: 0 60rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.page .content .contact .headset {
    width: 156rpx;
    height: 135rpx;
    margin: 70rpx auto;
    margin-top: 175rpx;
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/earphone.png");
    background-repeat: no-repeat;
    background-size: cover;
}

.page .content .contact .tips {
    font-size: 28rpx;
    text-align: center;
    color: #666666;
    padding-bottom: 120rpx;
}

.page .content .contact .cell {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    position: relative;
    padding: 50rpx 0;
    font-size: 32rpx;
}

.page .content .contact .cell:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1rpx;
    background-color: #d8d8d8;
    transform: scaleY(0.5);
}

.page .content .contact .cell .cell-head {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: start;
    justify-content: flex-start;
    -webkit-box-align: center;
    align-items: center;
    color: #333333;
}

.page .content .contact .cell .cell-head .icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
    background-repeat: no-repeat;
    background-size: cover;
}

.page .content .contact .cell .cell-head .icon.icon-qq {
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/icon-qq.png");
}

.page .content .contact .cell .cell-head .icon.icon-telephone {
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/icon-mobile.png");
}

.page .content .contact .cell .cell-head .icon.icon-wechat {
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/icon-contact.png");
}

.page .content .contact .cell .cell-footer {
    color: #666666;
    padding: 0;
    background: transparent;
    font-size: 32rpx;
    margin: 0;
}

.page .content .contact .cell .cell-footer:after {
    border: 0 none;
}