.page .content .inner {
    font-size: 20rpx;
}

.page .content .inner .title {
    font-size: 2em;
    font-weight: bold;
    padding: 30rpx 40rpx;
}

.page .content .inner .paragraph {
    font-size: 1.8em;
    margin: 30rpx 40rpx;
    text-indent: 1.8em;
    line-height: 1.8;
}

.page .action-group {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 30rpx 40rpx 60rpx;
}

.page .action-group .action {
    -webkit-box-flex: 1;
    flex: 1;
}

.page .action-group .action+.action {
    margin-left: 30rpx;
}

.page .action-group .action .button {
    padding: 0;
    font-size: 1.4em;
    height: 2.8em;
    line-height: 2.8em;
    border-radius: 1.4em;
    box-sizing: border-box;
    width: 100%;
}

.page .action-group .action .button:after {
    border: 0 none;
}

.page .action-group .action .button.button-disable {
    border: 2rpx solid #999999;
    color: #999999;
    background: transparent;
}

.page .action-group .action .button.button-default {
    border: 2rpx solid #999999;
    color: #333333;
    background: transparent;
}

.page .action-group .action .button.button-primary {
    background: #21D3AB;
    color: #ffffff;
}

.page .warning {
    padding-top: 60rpx;
    padding-bottom: 60rpx;
}

.page .action-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 260rpx;
    transform: translateY(260rpx);
    transition: all 0.4s ease;
    z-index: 2;
}

.page .action-bar.show {
    transform: translateY(0);
}

.page.day {
    background: #F3F8FF;
    color: #333333;
}

.page.night {
    background: #242528;
    color: #666666;
}

.page.night .action-group .action .button.button-disable {
    color: #666666;
}

.page.night .action-group .action .button.button-default {
    border: 2rpx solid #999999;
    color: #999999;
    background: transparent;
}

.page.night .action-group .action .button.button-primary {
    background: #999999;
    color: #000000;
}