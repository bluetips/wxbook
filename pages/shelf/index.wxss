.page {
    background: #ffffff;
}

.page .container {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-flex: 1;
    flex: 1;
}

.page .content {
    position: relative;
    -webkit-box-flex: 1;
    flex: 1;
    overflow: hidden;
}

.page .content .scroll-view_V .list {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    padding: 15rpx;
}

.page .content .scroll-view_V .list .item {
    width: 33.3%;
    padding: 15rpx;
    box-sizing: border-box;
}

.page .actionbar {
    position: relative;
    padding: 0 30rpx;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    font-size: 32rpx;
    color: #999999;
    display: none;
}

.page .actionbar.visible {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.page .actionbar:after {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    height: 1px;
    background: #D8D8D8;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
    top: 0;
    bottom: auto;
    background-color: #999999;
}

.page .actionbar .selectAll {
    position: relative;
    height: 120rpx;
    line-height: 120rpx;
    padding-left: 60rpx;
}

.page .actionbar .selectAll .radio {
    position: absolute;
    top: 40rpx;
    left: 0;
    width: 40rpx;
    height: 40rpx;
}

.page .actionbar .selectAll .radio.check {
    display: none;
}

.page .actionbar .selectAll.active .check {
    display: block;
}

.page .actionbar .selectAll.active .uncheck {
    display: none;
}

.page .actionbar .delete {
    color: #FF0000;
}