.page .content {
    position: relative;
    background: #FF5A00 url("https://mcdn.pinchuzu.cn/novel-cloud/lottery.jpg") 50% 0;
    background-size: 100% auto;
    text-align: center;
    color: #FFFFFF;
    font-size: 28rpx;
}

.page .content .title {
    display: block;
    margin: 60rpx auto 0;
    width: 703rpx;
    height: 447rpx;
}

.page .content .combo {
    position: absolute;
    top: 390rpx;
    right: 10rpx;
    width: 261rpx;
    height: 144rpx;
}

.page .content .shake {
    display: block;
    margin: 60rpx auto;
    width: 420rpx;
    height: 350rpx;
}

.page .content .chances {
    font-weight: bold;
    font-size: 32rpx;
    margin-top: 30rpx;
}

.page .content .button-start {
    background: #FFFFFF;
    width: 480rpx;
    height: 80rpx;
    color: #FF6200;
    font-size: 32rpx;
    font-weight: bold;
    border-radius: 40rpx;
}

.page .content .button-start:after {
    border: 0 none;
}

.page .content .mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.5);
    transition: all .2s linear;
    opacity: 0;
}

.page .content .mask.show {
    opacity: 1;
}

.page .content .modal {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    opacity: 0;
    transition: all .2s linear;
}

.page .content .modal.show {
    opacity: 1;
}

.page .content .modal .dialog {
    width: 620rpx;
    background: #FFFFFF;
    border-radius: 30rpx;
    overflow: hidden;
}

.page .content .modal .dialog .hd {
    height: 120rpx;
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/lottery-modal-title.png");
    background-size: cover;
    font-size: 40rpx;
    line-height: 120rpx;
    color: #FFFFFF;
    font-weight: bold;
}

.page .content .modal .dialog .bd {
    padding: 50rpx;
}

.page .content .modal .dialog .bd .logo {
    width: 200rpx;
    height: 200rpx;
}

.page .content .modal .dialog .bd .message {
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    margin-top: 20rpx;
}

.page .content .modal .dialog .bd .button-shake {
    margin: 50rpx auto 0;
    min-width: 420rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #FF7A01;
    font-size: 32rpx;
    color: #FFFFFF;
    border-radius: 40rpx;
}

.page .content .modal .dialog .bd .button-shake:after {
    border: 0 none;
}