.action-group {
    padding: 0 60rpx;
}

.action-group .button-charge {
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: 0 none;
    background: none;
    font-size: 32rpx;
    color: #ffffff;
    background: #21D3AB;
    border-radius: 40rpx;
}

.action-group .button-charge:after {
    border: 0 none;
}

.disallowed {
    text-align: center;
    font-size: 32rpx;
    color: #999999;
}

.message {
    font-size: 32rpx;
    color: #999999;
    text-align: center;
    margin-bottom: 30rpx;
}

.message .price {
    color: #21D3AB;
}

.button-task {
    margin: 60rpx 60rpx 0;
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: 0 none;
    background: none;
    font-size: 32rpx;
    color: #ffffff;
    background: #21D3AB;
    border-radius: 40rpx;
}

.button-task:after {
    border: 0 none;
}