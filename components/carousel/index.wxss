.wrapper {
    position: relative;
}

.wrapper .carousel {
    position: relative;
    height: 300rpx;
    background: #ffffff;
}

.wrapper .carousel .carousel-item .carousel-item-inner {
    display: block;
    height: 100%;
}

.wrapper .carousel .carousel-item .carousel-item-inner .thumb {
    display: block;
    width: 100%;
    height: 0;
    padding-bottom: 40%;
    background-size: cover;
    background-repeat: no-repeat;
}

.wrapper .indicator {
    position: absolute;
    left: 50%;
    bottom: 16rpx;
    transform: translateX(-50%);
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
}

.wrapper .indicator .dot {
    width: 36rpx;
    height: 6rpx;
    background: #ffffff;
    opacity: .6;
}

.wrapper .indicator .dot+.dot {
    margin-left: 10rpx;
}

.wrapper .indicator .dot.active {
    opacity: 1;
}