.coupon {
    position: relative;
    width: 730rpx;
    height: 284rpx;
    box-sizing: border-box;
    text-align: right;
    overflow: hidden;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/voucher-bg.png");
    background-size: 100% 100%;
    margin: 0 auto;
    padding: 40rpx 60rpx 40rpx 270rpx;
}

.coupon .amount {
    font-size: 36rpx;
    color: #333333;
    font-weight: bold;
}

.coupon .amount .num {
    padding-right: 10rpx;
    font-size: 64rpx;
}

.coupon .detail {
    font-size: 28rpx;
    color: #999999;
    line-height: 2;
}

.coupon .time {
    font-size: 28rpx;
    color: #666666;
    line-height: 2;
}

.coupon .empty {
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
    text-align: center;
}

.coupon.coupon-expire {
    background-image: url("https://mcdn.pinchuzu.cn/novel-cloud/voucher-expire-bg.png");
}

.coupon.coupon-expire .amount,.coupon.coupon-expire .time {
    color: #999999;
}