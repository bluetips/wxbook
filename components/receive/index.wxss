.receive {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    position: relative;
    width: calc(100% - 80rpx);
    margin: 0 auto;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.receive:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    background-color: #d8d8d8;
    transform: scaleY(0.5);
}

.receive .user {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
}

.receive .user .avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    margin-right: 30rpx;
    background-size: 100% 100%;
    background-image: url("https://qcdn.pinchuzu.cn/spa/koala@2x.png");
    overflow: hidden;
}

.receive .user .name {
    font-size: 32rpx;
}

.receive .user .date {
    font-size: 24rpx;
    color: #999999;
}

.receive .coupons {
    text-align: center;
}

.receive .coupons .coupon {
    font-size: 44rpx;
    font-weight: bold;
}

.receive .coupons .coupon .unit {
    padding-left: 5rpx;
    font-size: 24rpx;
}

.receive .coupons .luck {
    padding: 5rpx 8rpx;
    font-size: 21rpx;
    color: #fff;
    background-color: #21D3AB;
    border-radius: 10rpx;
}