.novel {
    width: 100%;
}

.novel .media {
    position: relative;
}

.novel .media .radio {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 50rpx;
    height: 50rpx;
    z-index: 2;
    display: none;
}

.novel .media:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.45);
    display: none;
}

.novel.isEditing .media .radio-uncheck {
    display: block;
}

.novel.isEditing .media:before {
    display: block;
}

.novel.active .media .radio-uncheck {
    display: none;
}

.novel.active .media .radio-check {
    display: block;
}

.novel .title {
    font-size: 28rpx;
    color: #333333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 10rpx 0 5rpx;
}

.novel .percent {
    font-size: 24rpx;
    color: #999999;
}