.user .avatar {
    position: relative;
    width: 32px;
    height: 32px;
    border-radius: 16px;
    margin-right: 10px;
    background-size: 100% 100%;
    overflow: hidden;
}

.user .avatar:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    border-radius: 100%;
    border: 1px solid rgba(216,216,216,0.6);
    box-sizing: border-box;
}

.user .button-login {
    display: block;
    height: 32px;
    line-height: 32px;
    text-align: center;
    border: 0 none;
    background: none;
    font-size: 28rpx;
    color: #666666;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    padding: 0;
}

.user .button-login:after {
    border: 0 none;
}