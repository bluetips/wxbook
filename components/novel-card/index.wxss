.novel {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.novel .media {
    width: 180rpx;
    margin-right: 40rpx;
    flex-shrink: 0;
}

.novel .content {
    -webkit-box-flex: 1;
    flex: 1;
}

.novel .content .title {
    font-size: 36rpx;
    color: #333333;
    font-weight: bold;
}

.novel .content .title .highlight {
    color: red;
    font-style: normal;
}

.novel .content .summary {
    margin: 10rpx 0 6rpx;
    font-size: 28rpx;
    color: #8A8A8F;
    line-height: 40rpx;
    height: 120rpx;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.novel .content .time {
    color: red;
    font-size: 24rpx;
    line-height: 40rpx;
}

.novel .content .time+.summary {
    -webkit-line-clamp: 2;
    height: 80rpx;
}

.novel .content .tags {
    height: 60rpx;
    overflow: hidden;
}